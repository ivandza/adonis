<!DOCTYPE HTML>
<html lang="hr">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!-- Make all relative URLs resolve under the pathPrefix -->
    <base href="{{ '/' | url }}">

    <!-- Styles -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
    <noscript><link rel="stylesheet" href="{{ '/assets/css/noscript.css' | url }}"></noscript>
  </head>

  <body class="landing is-preload">
    <div id="page-wrapper">

      {% include "header.njk" %}

      <main class="green-bg">
        {% block content %}{{ content | safe }}{% endblock %}
      </main>

      {% include "footer.njk" %}

    </div>

    <!-- Scripts (prefix-aware) -->
    <script src="{{ '/assets/js/jquery.min.js' | url }}"></script>
    <script src="{{ '/assets/js/jquery.dropotron.min.js' | url }}"></script>
    <script src="{{ '/assets/js/jquery.scrollex.min.js' | url }}"></script>
    <script src="{{ '/assets/js/browser.min.js' | url }}"></script>
    <script src="{{ '/assets/js/breakpoints.min.js' | url }}"></script>
    <script src="{{ '/assets/js/util.js' | url }}"></script>
    <script src="{{ '/assets/js/main.js' | url }}"></script>
  </body>
</html>
